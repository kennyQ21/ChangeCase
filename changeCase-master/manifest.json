{
	"name":"ChangeCase",
	"version":"1.0.0",
	"description":"Changes the case of the selected text.",
	"author":"Team IIIT",
	"manifest_version":2,
	"browser_action":{
		"default_icon": "logo.png",
		"default_popup":"popup.html"
	},
	"background":{
		"scripts":["background.js"]
	},
	"commands":{
		"changecase":{
			"suggested_key":{
				"default":"Ctrl+Shift+L"
			},
			"description":"Changes the case of the selected text."
		}
	},
	"permissions":[
		"activeTab",
		"tabs",
		"contextMenus",
		"notifications",
        "http://*/",
        "https://*/"
	]
}